# MWENDO MOJA WELFARE - PRODUCTION ENVIRONMENT
# TrueHost Deployment Configuration

# Server Configuration
PORT=8000
NODE_ENV=production

# Database Configuration
USE_SQLITE=true
DB_PATH=./mwendo_moja.db

# JWT Configuration
# IMPORTANT: Change this to a strong random secret in production!
JWT_SECRET=mwendo_moja_production_secret_key_change_this_immediately
JWT_EXPIRE=7d

# CORS Configuration
# Update with your actual domain
CORS_ORIGIN=https://mwendomojawelfare.co.ke,https://www.mwendomojawelfare.co.ke

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_ENABLED=false

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# SMS Configuration (Twilio) - Optional
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890
SMS_ENABLED=false

# M-Pesa Configuration - Optional
MPESA_CONSUMER_KEY=your_consumer_key
MPESA_CONSUMER_SECRET=your_consumer_secret
MPESA_BUSINESS_SHORT_CODE=174379
MPESA_PASSKEY=your_passkey
MPESA_ENABLED=false

# SendGrid Email - Optional
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@mwendomojawelfare.co.ke

